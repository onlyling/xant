{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@~/*": ["./src/*"],
      "components": ["./components/*"]
    },
    "lib": ["dom", "esnext"],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["react", "react-native"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "lib",
    "es"
  ]
}
