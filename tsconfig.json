{
  "compilerOptions": {
    "baseUrl": "demo",
    "paths": {
      "@/*": ["./*"],
      "components": ["../components"],
      "xant": ["../components"]
    },
    "lib": ["dom", "esnext"],
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["react", "react-native", "jest"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": ["./components", "./demo"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "./lib", "./es", "./index.app.js"]
}
